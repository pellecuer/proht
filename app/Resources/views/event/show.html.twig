{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}
{% block title %}Arrêts de tranche{% endblock %}

{% block body %}   
    <div class="container">       
        <header class="text-center py-3 mb-4">
            <h1 class="bg-white-semi_transparent">ARRETS DE TRANCHE</h1>
            <p>Voici la liste des arrêts de tranche, vacances scolaires...</p>
        </header>
        <div class="row border border-rounded my-2">
            <div class="col-md-10">
                <span class="fa-stack fa-1x my-2">
                    <i class="fas fa-circle fa-stack-2x text-dark"></i>
                    <a href="{{ path('createEvent') }}"><i class="fas fa-plus fa-stack-1x fa-inverse text-white"></i></a>
                </span>
                <span id="buttonPrint">
                </span>
            </div>
        </div>
        <div class= "row">
            <div class="col-md-10">
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Type</th>
                            <th>Code</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>                    
                    <tbody> 
                       {%for event in events %}
                            <tr>                                                            
                                <td>{{ event.id }}</td>
                                <td class="editFor">{{ event.eventtype }}</td>
                                <td class="editFor">{{ event.code }}</td>
                                <td class="editFor">{{ event.startdate|localizeddate('none', 'none', 'fr', null, 'E dd MMM Y') }}</td>
                                <td class="editFor">{{ event.enddate|localizeddate('none', 'none', 'fr', null, 'E dd MMM Y')  }}</td>                                
                                <td><a href="{{ path('editEvent', { 'id': event.id }) }}"><i class="fas fa-edit"></i></a></td>
                                <td><a href="{{ path('eventDelete', { 'id': event.id }) }}"><i class="fas fa-trash-alt"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>                    
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<script type="text/javascript" src="/assets/js/datatable/configEvent.js"></script>
{% endblock %}
    

