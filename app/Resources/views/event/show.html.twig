{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>
{% endblock %}
{% block title %}Welcome!{% endblock %}

{% block body %}   
    <div class="container">       
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent"><em class="text-dark">Evènements </em></h1>
            <p>Voici la liste des évènements</p>
        </header>
        <div class="row">
            <div class="col-md-1">
                <span class="fa-stack fa-1x my-2">
                    <i class="far fa-circle fa-stack-2x"></i>
                    <a href="{{ path('createEvent') }}"><i class="fas fa-plus fa-stack-1x fa-inverse"></i></a>                    
                </span>                    
            </div>                
        </div>        
        <div class= "row">
            <div class="col-md-10">
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Type</th>
                            <th>Code</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                        </tr>
                    </thead>                    
                    <tbody> 
                       {%for event in events %}
                            <tr>                                                            
                                <td>{{ event.id }}</td>
                                <td class="editFor">{{ event.eventtype }}</td>
                                <td class="editFor">{{ event.code }}</td>
                                <td class="editFor">{{ event.startdate|localizeddate('none', 'none', 'fr', null, 'E dd MMM Y') }}</td>
                                <td class="editFor">{{ event.enddate|localizeddate('none', 'none', 'fr', null, 'E dd MMM Y')  }}</td>                                
                                <td><a href="{{ path('editEvent', { 'id': event.id }) }}"><i class="fas fa-edit"></i></a></td>
                                <td><a href="{{ path('eventDelete', { 'id': event.id }) }}"><i class="fas fa-trash-alt"></i></a></td>
                            </tr>
                        {% endfor %}
                    </body>                    
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.js"></script>
<script type="text/javascript" src="/assets/js/datatable/config.js"></script>
<script type="text/javascript" src="/assets/js/datatable/ajax.js"></script>
<script type="text/javascript" src="/assets/js/datatable/addDeleteRow.js"></script>

{% endblock %}
    

