{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}
{% block title %}Contraintes réglementaires!{% endblock %}

{% block body %}
    <div class="container bg-light">
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent">CONTRAINTES</h4>
            <p>Voici la liste des contraintes pour être en conformité avec le droit du travail</p>
        </header>
        <div class="row border border-rounded my-2">
            <div class="col-md-10">                
                <span id="buttonPrint">
                </span>
            </div>
        </div>
        <div class="row py-3">            
            <div class="col-md-10">                
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Nombre d'heures maximum par jour</th>
                            <th>Nombre d'heures de repos minimum par semaine</th>
                            <th>Nombre d'heures minimum de repos entre les jours</th>
                            <th>Nombre d'heures maximum par semaine</th>
                            <th>Nombre d'heures maximum en moyenne sur X semaine</th>
                            <th>X semaine</th>
                            <th></th>
                        </tr>
                    </thead>                    
                    <tbody> 
                       {%for rule in rules %}
                            <tr>                                                            
                                <td>{{ rule.id }}</td>
                                <td>{{ rule.maxHourPerDay }}</td>
                                <td>{{ rule.minRestPerWeek }}</td>
                                <td>{{ rule.MinRestBetweenDays }}</td>
                                <td>{{ rule.MaxHourPerWeek }}</td>
                                <td>{{ rule.MaxAverageperWeek }}</td>
                                <td>{{ rule.nbWeekForAverage }}</td>
                                <td><a href="{{ path('editRule', { 'id': rule.id }) }}"><i class="fas fa-edit"></i></a></td>                                
                            </tr>
                        {% endfor %}                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<<script type="text/javascript" src="/assets/js/datatable/configRule.js"></script>
{% endblock %}
    

