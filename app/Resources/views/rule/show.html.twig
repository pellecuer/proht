{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>
{% endblock %}
{% block title %}Contraintes réglementaires!{% endblock %}

{% block body %}
    <div class="container bg-light">
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent">Contraintes<em class="text-dark"> réglementaires </em></h1>
            <p>Voici la liste des contraintes réglementaires</p>
        </header>
        <div class="row border border-rounded my-2">
            <div class="col-md-10">
                <span class="fa-stack fa-1x my-2">
                    <i class="fas fa-circle fa-stack-2x text-secondary"></i>
                    <a href="{{ path('createRule') }}"><i class="fas fa-plus fa-stack-1x fa-inverse text-white"></i></a>
                </span>
                <span id="buttonPrint">
                </span>
            </div>
        </div>
        <div class="row py-3">            
            <div class="col-md-10">                
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Nombre d'heures maximum par jour</th>
                            <th>Nombre d'heures de repos minimum par semaine</th>
                            <th>Nombre d'heures minimum de repos entre les jours</th>
                            <th>Nombre d'heures maximum par semaine</th>
                            <th>Nombre d'heures maximum en moyenne sur X semaine</th>
                            <th>X semaine</th>
                            <th></th>
                        </tr>
                    </thead>                    
                    <tbody> 
                       {%for rule in rules %}
                            <tr>                                                            
                                <td>{{ rule.id }}</td>
                                <td>{{ rule.maxHourPerDay }}</td>
                                <td>{{ rule.minRestPerWeek }}</td>
                                <td>{{ rule.MinRestBetweenDays }}</td>
                                <td>{{ rule.MaxHourPerWeek }}</td>
                                <td>{{ rule.MaxAverageperWeek }}</td>
                                <td>{{ rule.nbWeekForAverage }}</td>
                                <td><a href="{{ path('editRule', { 'id': rule.id }) }}"><i class="fas fa-edit"></i></a></td>                                
                            </tr>
                        {% endfor %}                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.js"></script>
<script type="text/javascript" src="/assets/js/datatable/configRule.js"></script>
{% endblock %}
    

