{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>
{% endblock %}
{% block title %}Welcome!{% endblock %}

{% block body %}   
    <div class="container">       
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent"><em class="text-dark">Utilisateurs</em></h1>
            <p>Voici la liste des utilisateurs</p>
        </header>
        <div class="row">
            <div class="col-md-1">
                <span class="fa-stack fa-1x my-2">
                    <i class="fas fa-circle fa-stack-2x text-primary"></i>
                    <a href="{{ path('user_registration') }}"><i class="fas fa-plus fa-stack-1x fa-inverse"></i></a>                    
                </span>                    
            </div>                
        </div>
        <div class= "row">
            <div class="col-md-10">
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            
                        </tr>
                    </thead>                   
                    <tbody>                        
                        {%for user in users %}
                            <tr>                                                            
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>                               
                                <td><a href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fas fa-edit"></i></a></td>
                                <td><a href="{{ path('user_delete', { 'id': user.id }) }}"><i class="fas fa-trash-alt"></i></a></td>                                
                            </tr>
                        {% endfor %}
                    </body>                    
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}

{% endblock %}
    
