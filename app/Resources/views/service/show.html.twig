{% extends 'base.html.twig' %}

{% block stylesheets %}  
{% endblock %}
{% block title %}Service{% endblock %}

{% block body %}
    <div class="container bg-light">
        <header class="text-center py-3 mb-4">
            <h1 class="bg-white-semi_transparent">SERVICES </h1>
            <p>Visualisez, éditer, imprimer les services</p>
        </header>
        <div class="row border border-rounded my-2">
            <div class="col-md-10">
                <span id="buttonPrint">
                </span>
                <span class="fa-stack fa-1x my-2">
                    <i class="fas fa-circle fa-stack-2x text-dark"></i>
                    <a href="{{ path('createService') }}"><i class="fas fa-plus fa-stack-1x fa-inverse text-white"></i></a>
                </span>                
            </div>
        </div>
        <div class= "row">
            <div class="col-md-10">
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Chef</th>
                            <th>Code arrêt</th>
                            <th></th>
                            <th></th>
                            
                        </tr>
                    </thead>                    
                    <tbody> 
                       {%for service in services %}
                            <tr>                                                            
                                <td>{{ service.id }}</td>
                                <td class="editFor">{{ service.name }}</td>
                                <td class="editFor">{{ service.chief }}</td>
                                <td class="editFor">{{ service.event.code }}</td>                               
                                <td><a href="{{ path('editService', { 'id': service.id }) }}"><i class="fas fa-edit"></i></a></td>
                                <td><a href="{{ path('deleteService', { 'id': service.id }) }}"><i class="fas fa-trash-alt"></i></a></td>                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<script type="text/javascript" src="/assets/js/datatable/configSection.js"></script>
{% endblock %}
    

