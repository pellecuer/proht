
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Welcome!{% endblock %}


{% block body %}   
    <div class="container">       
        <h1>Créer un nouvel Agent</h1>       
        <div class="form-group mb-2">
        {{ form_start(form) }}
        {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr' : {'placeholder':'Nom d\'utilisateur ...' }}) }}
        {{ form_row(form.email, {'label': 'Adresse email', 'attr' : {'placeholder':'Email ...' }}) }}
        {{ form_row(form.plainPassword.first, {'label': 'Mot de passe', 'attr' : {'placeholder':'Mot de passe ...' }}) }}
        {{ form_row(form.plainPassword.second, {'label': 'Confirmation de mot de passe', 'attr' : {'placeholder':'Répéter le mot de passe ...' }}) }}
        {{ form_row(form.Envoyer) }}
        {{ form_end(form) }}
        </div>
    </div> 
{% endblock %}

{% block javascripts %}
{% endblock %}
