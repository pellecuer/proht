{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>
{% endblock %}
{% block title %}Section{% endblock %}

{% block body %}   
    <div class="container bg-light">
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent">SECTION</h1>
            <p>Visualisez, éditer, modifier, les sections</p>
        </header>
        <div class="row border border-rounded my-2">
            <div class="col-md-10">
                <span class="fa-stack fa-1x my-2">
                    <i class="fas fa-circle fa-stack-2x text-primary"></i>
                    <a href="{{ path('createSection') }}"><i class="fas fa-plus fa-stack-1x fa-inverse text-white"></i></a>
                </span>
                <span id="buttonPrint">
                </span>
            </div>
        </div>
        <div class= "row">
            <div class="col-md-10">                
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Chef</th>
                            <th>Service</th>
                            <th>Code d'arrêt</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>                    
                    <tbody> 
                       {%for section in sections %}
                            <tr>                                                            
                                <td>{{ section.id }}</td>
                                <td class="editFor">{{ section.name }}</td>
                                <td class="editFor">{{ section.chief }}</td>
                                <td class="editFor">{{ section.service.name }}</td>
                                <td class="editFor">{{ section.event.code }}</td>  
                                <td><a href="{{ path('editSection', { 'id': section.id }) }}"><i class="fas fa-edit"></i></a></td>
                                <td><a href="{{ path('deleteSection', { 'id': section.id }) }}"><i class="fas fa-trash-alt"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.js"></script>
<script type="text/javascript" src="/assets/js/datatable/configService.js"></script>



{% endblock %}
    

