{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}
{% block title %}Code Planning{% endblock %}

{% block body %}   
    <div class="container bg-light">
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent">CODES PLANNING</em></h1>
            <p>Horaires remontés pour {{ "now"|date("Y") }}</p>
        </header>
        <div class="row border border-rounded my-2">
            <div class="col-md-10">
                <span class="fa-stack fa-1x my-2">
                    <i class="fas fa-circle fa-stack-2x text-dark"></i>
                    <a href="{{ path('createLetter') }}"><i class="fas fa-plus fa-stack-1x fa-inverse text-white"></i></a>
                </span>
                <span id="buttonPrint">
                </span>
            </div>
        </div>
        <div class= "row">
            <div class="col-md-10">
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Code planning</th>                            
                            <th>Durée effective</th>
                            <th>Heure de début</th>
                            <th>Heure de fin</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>                   
                    <tbody>                        
                        {%for letter in letters %}
                            <tr>                                                            
                                <td>{{ letter.id }}</td>
                                <td>{{ letter.letter }}</td>                                 
                                <td>{{ letter.effectiveDuration}}</td>
                                <th>{{ letter.starttime|date|localizeddate('none', 'none', 'fr', null, 'H:mm') }}</th>
                                <th>{{ letter.endtime|date|localizeddate('none', 'none', 'fr', null, 'H:mm')}}</th>
                                <td><a href="{{ path('editLetter', { 'id': letter.id }) }}"><i class="fas fa-edit"></i></a></td>
                                <td><a href="{{ path('deleteLetter', { 'id': letter.id }) }}"><i class="fas fa-trash-alt"></i></a></td>                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


{% block javascripts %}
<script type="text/javascript" src="/assets/js/datatable/configLetter.js"></script>
{% endblock %}
    
