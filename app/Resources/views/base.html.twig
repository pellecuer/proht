<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>        
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">               
        <link rel="stylesheet" href="/assets/css/styles.css">
        <link href="/assets/css/datepicker.css" rel="stylesheet" type="text/css"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %} {% endblock %}
    </head>
    <body>
        {% block nav %}
        <div class="container">
            <div class="row align-items-center">
                <div class =" col-md-4">
                    <a class="navbar-brand" href="{{ path('home') }}">
                        <img src="{{ asset('/assets/images/EDF-logo.png') }}" width="auto" height="100px"  alt="">						
                    </a>  
                </div>
                <div class =" col-md-4">
                    <h2>Planning RHAT</h2>
                </div>
                <div class =" col-md-4">
                    <a class="navbar-brand" href="{{ path('home') }}">
                        <img src="{{ asset('/assets/images/logo-site-Saint-Alban.jpg') }}" width="auto" height="100px" alt="">						
                    </a> 
                </div>
            </div>
            <div class="row align-items-center justify-content-end" style="background-color: #09357A;">                
                <span class="mr-2 text-white">Bonjour {% if  app.user %} {{ app.user.username }} {% endif %}</span>
                <span class="mr-2 text-white">
                    {% if  app.user %}
                        <a class="btn btn-danger mx-1" href="{{ path('logout') }}" role="button">Déconnexion <i class="fas fa-sign-out-alt"></i></a>
                    {% else %}
                        <a class="btn btn-success mx-1" href="{{ path('login') }}" role="button"> Connexion<i class="fas fa-sign-in-alt"></i></a>
                    {% endif %}                    
                </span>
            </div>        
            <div class="row" style="background-color: #e3f2fd;">  
                <nav class="navbar navbar-expand-lg navbar-light" >               
                    <div class="collapse navbar-collapse" id="navbarNav">
                          <ul class="navbar-nav align-items-center justify-content-end">                         
                              <li class="nav-item ">
                                    <a href="{{ path('home') }}">
                                        <i class="fas fa-home fa-1x"></i>
                                    </a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showAgenda') }}">Agenda</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showrule') }}">Règles</a>
                              </li>
                               <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showagent') }}">Agents</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showteam') }}">Equipes</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showletter') }}">Codes</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showSection') }}">Section</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('ShowService') }}">Service</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('showEvent') }}">Arrêt</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('doc') }}">Doc</a>
                              </li>
                              <li class="nav-item">
                                  <a class="nav-link" href="{{ path('user_index') }}">User</a>
                              </li>
                          </ul>
                    </div>
                </nav>
            </div>                        
        </div>
        {% endblock %}
    
        <div class="container">
            <div class = "row my-3">
               <div class ="col-md-12 ">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
               </div>
            </div>
        </div>
    
        {% block body %}
        {% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {% block javascripts %}{% endblock %}        
    </body>
</html>
