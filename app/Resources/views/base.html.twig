<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>        
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">               
        <link rel="stylesheet" href="/assets/css/styles.css">
        <link href="/assets/css/datepicker.css" rel="stylesheet" type="text/css"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %} {% endblock %}
    </head>
    <body>
        {% block nav %}
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light py-3" style="background-color: #e3f2fd;">
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/%C3%89lectricit%C3%A9_de_France_logo.svg/1200px-%C3%89lectricit%C3%A9_de_France_logo.svg.png" width="171px" height="auto" class="d-inline-block align-top" alt="">						
                </a>
                <div class="collapse navbar-collapse ml-4" id="navbarNav">
                      <ul class="navbar-nav">
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('showAgenda') }}">Agenda</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('showrule') }}">Règles</a>
                          </li>
                           <li class="nav-item">
                              <a class="nav-link" href="{{ path('showagent') }}">Agents</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('showteam') }}">Equipes</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('showletter') }}">Codes</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('showSection') }}">Section</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('ShowService') }}">Service</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('showEvent') }}">Arrêt</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('doc') }}">Doc</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('user_index') }}">User</a>
                          </li>
                      </ul>
                </div>
                <form class="form-inline">
                      <input class="form-control mr-sm-2" type="search" placeholder="Agent, NNI... Service">
                      <button class="btn btn-outline-primary my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
                </form>			  
            </nav>
        </div>
        {% endblock %}
    
        <div class="container">
             {% if  app.user %}
             <div class = "row my-3">
                 <div class ="col-md-12 ">
                    <a class="btn btn-danger" href="{{ path('logout') }}" role="button">Sign out <i class="fas fa-sign-out-alt"></i></a>
                   
                </div> 
             </div>
            <div class = "row my-3">
            <div class ="col-md-12 ">
                <h5>Bonjour, {{ app.user.username }}</h>
            </div>              
            {% else %}
            <div class = "row my-3">
                <div class ="col-md-12 ">
                    <a class="btn btn-success" href="{{ path('login') }}" role="button">Sign in <i class="fas fa-sign-in-alt"></i></a>
                 </div>
             </div>  
            {% endif %} 
                
            <div class = "row my-3">
               <div class ="col-md-12 ">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
               </div>
            </div>
        </div>
    
        {% block body %}
        {% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {% block javascripts %}{% endblock %}        
    </body>
</html>
