{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>
{% endblock %}
{% block title %}Welcome!{% endblock %}

{% block body %}   
    <div class="container">       
        <header class="text-center py-3">
            <h1 class="bg-white-semi_transparent"><em class="text-dark">Agent {{agent.name}} </em></h1>
            <p>Voici la fiche de l'agent</p>
        </header>
        <div class= "row">
            <div class="col-md-12">               
                <table id="example" class="table table-striped table-hover table-sm shadow-lg" style="width:100%">
                     <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>NNI</th>
                            <th>Nom</th>
                            <th>Pr√©nom</th>
                            <th>Fonction</th>
                            <th>Equipe</th>
                            <th>Role</th>
                        </tr>
                    </thead>                    
                    <tbody>
                        <tr>                                                            
                            <td>{{ agent.id }}</td>
                            <td>{{ agent.nni }}</td>
                            <td>{{ agent.name }}</td>
                            <td>{{ agent.firstname }}</td>
                            <td>{{ agent.function }}</td>
                            <td>{{ agent.team.name }}</td>
                            <td>{{ agent.role.name }}</td>
                            <td><a href="{{ path('editAgent', { 'id': agent.id }) }}"><i class="fas fa-edit"></i></a></td>
                            <td><a href="{{ path('deleteAgent', { 'id': agent.id }) }}"><i class="fas fa-trash-alt"></i></a></td> 
                        </tr>                                               
                    </body>                    
                </table>
            </div>
        </div>
    </div>       
{% endblock %}


