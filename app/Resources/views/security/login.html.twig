{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/sl-1.2.6/datatables.min.css"/>{% endblock %}
{% block title %}Agenda{% endblock %}

{% block body %}  

<div class="container">
    <div class= "row">
        {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %} 
             <form action="{{ path('login') }}" method="post">
                <div class="form-group mb-2">
                    <label for="username">Nom d'utilisateur:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Entrez votre nom d'utilisateur"/>
                </div>
                <div class="form-group mb-2">
                    <label for="password">Mot de passe:</label>
                    <input type="password" id="password" name="_password"placeholder="Entrez votre mot de passe" />
                </div>
                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                    <button type="submit" class="btn btn-outline-dark">Se connecter</button>
                </div>
             </form>
        </div>
    </div>
</div> 
  
{% endblock %}



    
